@model ApartmentSearch.Models.Home.ListingDetailModel

@{
    ViewData["Title"] = "Details - Apartments";
}


<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="display-4">Details</h1>
    </div>
</div>


<div class="jumbotron">
    <div class="col-md-8">
        @if (Model.Images != null && Model.Images.Count() != 0)
        {
            <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                    @for (int i = 1; i < Model.Images.Count(); i++)
                    {
                        <li data-target="#carouselIndicators" data-slide-to="@i"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Model.Images[0]" alt="slide 0">
                    </div>
                    @for (int i = 1; i < Model.Images.Count(); i++)
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@Model.Images[i]" alt=" slide @i">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        }
        else
        {
            <div id="noImageCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="..." alt="No Images Available">
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        <h4><i class="fa fa-home fa-2x" aria-hidden="true"></i><strong>Entire Home</strong></h4>
        <p class="text-muted">You'll have the @Model.Category to yourself</p>
        <hr />
        <h4>Description</h4>
        <p>@Model.Description</p>
        <hr />
        <p><i class="fa fa-bed fa-lg" aria-hidden="true"></i><strong>Bedroom</strong></p>
        @if (Model.NoOfBedrooms > 1)
        {
            <p class="text-muted">@Model.NoOfBedrooms Bedrooms</p>
        }
        else
        {
            <p class="text-muted">@Model.NoOfBedrooms Bedroom</p>
        }

        <p><i class="fa fa-bath fa-lg" aria-hidden="true"></i><strong>Bathroom</strong></p>
        @if (Model.NoOfBaths > 1)
        {
            <p class="text-muted">@Model.NoOfBaths Bathrooms</p>
        }
        else
        {
            <p class="text-muted">@Model.NoOfBaths Bathroom</p>
        }
        <p><i class="fa fa-washer fa-lg" aria-hidden="true"></i><strong>Laundry</strong></p>
        @if (Model.LaundryAvailable)
        {
            <p class="text-muted">Available</p>
        }
        else
        {
            <p class="text-muted">Not Available</p>
        }
        <p><i class="fa fa-parking fa-lg" aria-hidden="true"></i><strong>Parking</strong></p>
        @if (Model.OffStreetParking)
        {
            <p class="text-muted">Available</p>
        }
        else
        {
            <p class="text-muted">Not Available</p>
        }
        <hr />

        <p><i class="fa fa-map-marker fa-lg" aria-hidden="true"></i><strong>Address</strong></p>
        <p class="text-muted">@Model.Address, @Model.PostCode</p>

        <p><i class="fa fa-usd fa-lg" aria-hidden="true"></i><strong>Price Per Month</strong></p>
        <p class="text-muted">$ @Model.PricePerMonth</p>

        <p><i class="fa fa-clock-o fa-lg" aria-hidden="true"></i><strong>Posted By :</strong>@Model.PosterFirstName @Model.DateCreated</p>

    </div>
</div>